<div class="container">
  <h1>Add a tag to <%= @plant.name %></h1>

  <%= simple_form_for [@plant, @plant_tag] do |f| %>
    <%= f.input :tag, collection: Tag.all,
                input_html: {
                  data: { controller: 'select2' }
                } %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
